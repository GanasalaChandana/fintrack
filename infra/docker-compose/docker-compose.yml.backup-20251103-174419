  # API Gateway (Spring Boot) - Must start LAST
  api-gateway:
    build:
      context: ../../backend/api-gateway
      dockerfile: Dockerfile
    image: fintrack-api-gateway:latest
    container_name: fintrack-api-gateway
    ports:
      - "8080:8080"
    environment:
      # Server
      - SERVER_PORT=8080
      # JWT
      - JWT_SECRET=404E635266556A586E3272357538782F413F4428472B4B6250645367566B5970
      - JWT_EXPIRATION=86400000
      # Redis
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      # Service Discovery
      - USERS_SERVICE_HOST=users-service
      - USERS_SERVICE_PORT=8081
      - TRANSACTIONS_SERVICE_HOST=transactions-service
      - TRANSACTIONS_SERVICE_PORT=8082
      - ALERTS_SERVICE_HOST=alerts-service
      - ALERTS_SERVICE_PORT=8083
      - REPORTS_SERVICE_HOST=reports-service
      - REPORTS_SERVICE_PORT=8084
      - BUDGETS_SERVICE_HOST=budgets-service
      - BUDGETS_SERVICE_PORT=8085
    depends_on:
      users-service:
        condition: service_healthy
      transactions-service:
        condition: service_healthy
      alerts-service:
        condition: service_healthy
      reports-service:
        condition: service_healthy
      budgets-service:
        condition: service_healthy
      redis:
        condition: service_healthy
    networks:
      - fintrack-network
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 1G
        reservations:
          memory: 512M

volumes:
  postgres_data:
  redis_data:
  zookeeper_data:
  zookeeper_logs:
  kafka_data:
  prometheus_data:
  grafana_data:
  loki_data:

networks:
  fintrack-network:
    driver: bridge