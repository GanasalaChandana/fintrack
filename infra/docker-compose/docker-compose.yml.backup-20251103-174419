  # Reports Service (Spring Boot)
  reports-service:
    build:
      context: ../../backend/reports-service
      dockerfile: Dockerfile
    image: fintrack-reports-service:latest
    container_name: fintrack-reports-service
    ports:
      - "8084:8084"
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - SERVER_PORT=8084
      # PostgreSQL
      - POSTGRES_HOST=postgres
      - POSTGRES_PORT=5432
